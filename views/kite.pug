extends layout

block content
  h1= title
  - let  = [{kite_color:"Black",kite_length:"vertical",kite_breadth:"horizontal", kite_cost:"$30", },{kite_color:"White",kite_length:"vertical",kite_breadth:"horizontal", kite_cost:"$25"},{kite_color:"Blue",kite_length:"horizontal",kite_breadth:"vertical",  kite_cost:"$20"}]
  div(class="container-fluid")
    div(class="row")
      each a,index in kite
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Color is #{item.kite_color}
          p length is #{item.kite_length}
          p breadth  is #{item.kite_breadth}
          p Cost is #{item.kite_cost}
          
  script.
    function buy(a)
    {
      alert ('You purchased Item $(a+1)')
    }